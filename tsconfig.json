{
  "compilerOptions": {
    "outDir": "dist/",
    "module": "commonjs",
    "jsx": "react",
    "target": "es5",
    "allowJs": true,
    "baseUrl": "./",
    "lib": ["es5", "es6", "dom"],
    "sourceMap": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./src/typings"]
  },
  "include": ["./src/**/*"],
  "exclude": ["dist", "build", "node_modules"]
}
